<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layoutBackground"
        tools:context="self.harmony.bashrandomh.ui.activity.MainActivity" android:paddingLeft="4dp" android:paddingRight="4dp">



    <self.harmony.bashrandomh.Views.FontedTextView
            android:id="@+id/textViewProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/progress"
            android:textColor="@color/darkGrey"
            android:layout_above="@+id/progressBar" android:layout_centerHorizontal="true">
    </self.harmony.bashrandomh.Views.FontedTextView>

    <self.harmony.bashrandomh.Views.FontedTextView
            android:id="@+id/emptyView"
            android:layout_width="wrap_content"
            android:textColor="@color/pale"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:ellipsize="end"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:progressDrawable="@drawable/progress_black"
            android:id="@+id/progressBar"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="173dp"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

    <self.harmony.bashrandomh.Views.BashListView
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="8dp" />
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/bashImageView"
            android:background="@drawable/bash"
            android:layout_above="@+id/textViewProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"/>


</RelativeLayout>
